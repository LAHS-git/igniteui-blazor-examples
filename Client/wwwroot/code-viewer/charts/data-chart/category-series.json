    "path": "../../samples/charts/data-chart/category-series/App.razor",
    "content": "\n@using IgniteUI.Blazor.Controls\n\n<div class=\"container vertical\">\n\n    <div class=\"options vertical\">\n\n        <span class=\"legend-title\">Legend: </span>\n        <div class=\"legend\">\n            <IgbLegend @ref=\"Legend\" Orientation=\"LegendOrientation.Horizontal\" />\n        </div>\n\n        <div class=\"overlay-right\" >\n            <div class=\"options horizontal\" >\n                <label class=\"options-label\">Category Type: </label>\n                <select value=@SeriesType @onchange=\"OnSeriesTypeChanged\">\n                    <option>Column</option>\n                    <option>Area</option>\n                    <option>Bar</option>\n                    <option>Point</option>\n                    <option>Line</option>\n                    <option>Spline</option>\n                    <option>Spline Area</option>\n                    <option>Step Area</option>\n                    <option>Step Line</option>\n                    <option>Waterfall</option>\n                </select>\n            </div>\n        </div>\n\n    </div>\n\n    <div class=\"container vertical\">\n        @if (Data != null)\n        {\n        <IgbDataChart Height=\"100%\" Width=\"100%\"\n                   ChartTitle=\"Total Olympic Medals\"\n                   Subtitle=\"United States vs China vs Russia\"\n                   TitleTopMargin=\"10\"\n                   IsHorizontalZoomEnabled=\"true\"\n                   IsVerticalZoomEnabled=\"true\"\n                   Legend=\"Legend\"\n                   @ref=\"Chart\">\n\n            @if (SeriesType != \"Bar\")\n            {\n                <IgbCategoryXAxis Name=\"xAxis\" Label=\"Year\" DataSource=\"Data\"\n                               Title=\"Olympic Years\" Gap=\"0.2\" Overlap=\"-0.05\" />\n                <IgbNumericYAxis Name=\"yAxis\" Title=\"Olympic Medals\" TitleLeftMargin=\"10\" />\n            }\n\n            @if (SeriesType == \"Bar\")\n            {\n                <IgbNumericXAxis Name=\"xAxis2\" Label=\"Year\"\n                              Title=\"Olympic Years\" />\n                <IgbCategoryYAxis Name=\"yAxis2\" Title=\"Olympic Medals\" TitleLeftMargin=\"10\" DataSource=\"Data\" Gap=\"0.2\" Overlap=\"-0.05\" />\n\n                <IgbBarSeries Name=\"series1\"\n                           ValueMemberPath=\"USA\"\n                           Title=\"USA\"\n                           XAxisName=\"xAxis2\"\n                           YAxisName=\"yAxis2\"\n                           DataSource=\"Data\">\n                </IgbBarSeries>\n\n                <IgbBarSeries Name=\"series2\"\n                           ValueMemberPath=\"RUS\"\n                           Title=\"Russia\"\n                           XAxisName=\"xAxis2\"\n                           YAxisName=\"yAxis2\"\n                           DataSource=\"Data\">\n                </IgbBarSeries>\n            }\n\n            @if (SeriesType == \"Column\")\n            {\n                <IgbColumnSeries Name=\"series1\"\n                              ValueMemberPath=\"USA\"\n                              Title=\"USA\"\n                              XAxisName=\"xAxis\"\n                              YAxisName=\"yAxis\"\n                              DataSource=\"Data\">\n                </IgbColumnSeries>\n\n                <IgbColumnSeries Name=\"series2\"\n                              ValueMemberPath=\"RUS\"\n                              Title=\"Russia\"\n                              XAxisName=\"xAxis\"\n                              YAxisName=\"yAxis\"\n                              DataSource=\"Data\">\n                </IgbColumnSeries>\n            }\n\n            @if (SeriesType == \"Area\")\n            {\n                <IgbAreaSeries Name=\"series1\"\n                            ValueMemberPath=\"USA\"\n                            Title=\"USA\"\n                            XAxisName=\"xAxis\"\n                            YAxisName=\"yAxis\"\n                            DataSource=\"Data\">\n                </IgbAreaSeries>\n\n                <IgbAreaSeries Name=\"series2\"\n                            ValueMemberPath=\"RUS\"\n                            Title=\"Russia\"\n                            XAxisName=\"xAxis\"\n                            YAxisName=\"yAxis\"\n                            DataSource=\"Data\">\n                </IgbAreaSeries>\n            }\n\n            @if (SeriesType == \"Point\")\n            {\n                <IgbPointSeries Name=\"series1\"\n                             ValueMemberPath=\"USA\"\n                             Title=\"USA\"\n                             XAxisName=\"xAxis\"\n                             YAxisName=\"yAxis\"\n                             DataSource=\"Data\">\n                </IgbPointSeries>\n\n                <IgbPointSeries Name=\"series2\"\n                             ValueMemberPath=\"RUS\"\n                             Title=\"Russia\"\n                             XAxisName=\"xAxis\"\n                             YAxisName=\"yAxis\"\n                             DataSource=\"Data\">\n                </IgbPointSeries>\n            }\n\n            @if (SeriesType == \"Line\")\n            {\n                <IgbLineSeries Name=\"series1\"\n                            ValueMemberPath=\"USA\"\n                            Title=\"USA\"\n                            XAxisName=\"xAxis\"\n                            YAxisName=\"yAxis\"\n                            DataSource=\"Data\">\n                </IgbLineSeries>\n\n                <IgbLineSeries Name=\"series2\"\n                            ValueMemberPath=\"RUS\"\n                            Title=\"Russia\"\n                            XAxisName=\"xAxis\"\n                            YAxisName=\"yAxis\"\n                            DataSource=\"Data\">\n                </IgbLineSeries>\n            }\n\n            @if (SeriesType == \"Spline\")\n            {\n                <IgbSplineSeries Name=\"series1\"\n                              ValueMemberPath=\"USA\"\n                              Title=\"USA\"\n                              XAxisName=\"xAxis\"\n                              YAxisName=\"yAxis\"\n                              DataSource=\"Data\">\n                </IgbSplineSeries>\n\n                <IgbSplineSeries Name=\"series2\"\n                              ValueMemberPath=\"RUS\"\n                              Title=\"Russia\"\n                              XAxisName=\"xAxis\"\n                              YAxisName=\"yAxis\"\n                              DataSource=\"Data\">\n                </IgbSplineSeries>\n            }\n\n            @if (SeriesType == \"Spline Area\")\n            {\n                <IgbSplineAreaSeries Name=\"series1\"\n                                  ValueMemberPath=\"USA\"\n                                  Title=\"USA\"\n                                  XAxisName=\"xAxis\"\n                                  YAxisName=\"yAxis\"\n                                  DataSource=\"Data\">\n                </IgbSplineAreaSeries>\n\n                <IgbSplineAreaSeries Name=\"series2\"\n                                  ValueMemberPath=\"RUS\"\n                                  Title=\"Russia\"\n                                  XAxisName=\"xAxis\"\n                                  YAxisName=\"yAxis\"\n                                  DataSource=\"Data\">\n                </IgbSplineAreaSeries>\n            }\n\n            @if (SeriesType == \"Step Area\")\n            {\n                <IgbStepAreaSeries Name=\"series1\"\n                                ValueMemberPath=\"USA\"\n                                Title=\"USA\"\n                                XAxisName=\"xAxis\"\n                                YAxisName=\"yAxis\"\n                                DataSource=\"Data\">\n                </IgbStepAreaSeries>\n\n                <IgbStepAreaSeries Name=\"series2\"\n                                ValueMemberPath=\"RUS\"\n                                Title=\"Russia\"\n                                XAxisName=\"xAxis\"\n                                YAxisName=\"yAxis\"\n                                DataSource=\"Data\">\n                </IgbStepAreaSeries>\n            }\n\n            @if (SeriesType == \"Step Line\")\n            {\n                <IgbStepLineSeries Name=\"series1\"\n                                ValueMemberPath=\"USA\"\n                                Title=\"USA\"\n                                XAxisName=\"xAxis\"\n                                YAxisName=\"yAxis\"\n                                DataSource=\"Data\">\n                </IgbStepLineSeries>\n\n                <IgbStepLineSeries Name=\"series2\"\n                                ValueMemberPath=\"RUS\"\n                                Title=\"Russia\"\n                                XAxisName=\"xAxis\"\n                                YAxisName=\"yAxis\"\n                                DataSource=\"Data\">\n                </IgbStepLineSeries>\n            }\n\n            @if (SeriesType == \"Waterfall\")\n            {\n                <IgbWaterfallSeries Name=\"series1\"\n                                 ValueMemberPath=\"USA\"\n                                 Title=\"USA\"\n                                 XAxisName=\"xAxis\"\n                                 YAxisName=\"yAxis\"\n                                 DataSource=\"Data\">\n                </IgbWaterfallSeries>\n\n                <IgbWaterfallSeries Name=\"series2\"\n                                 ValueMemberPath=\"RUS\"\n                                 Title=\"Russia\"\n                                 XAxisName=\"xAxis\"\n                                 YAxisName=\"yAxis\"\n                                 DataSource=\"Data\">\n                </IgbWaterfallSeries>\n            }\n        </IgbDataChart>\n        }\n        </div>\n</div>\n\n@code {\n\n    private List<SampleCategoryItem> Data;\n    private IgbDataChart _Chart;\n    private IgbDataChart Chart\n    {\n        get { return _Chart; }\n        set\n        {\n            _Chart = value;\n            SeriesType = \"Column\";\n            StateHasChanged();\n        }\n    }\n\n    private IgbLegend legend;\n    private IgbLegend Legend\n    {\n        get { return legend; }\n        set\n        {\n            legend = value;\n            StateHasChanged();\n        }\n    }\n    private string seriesType;\n    private string SeriesType\n    {\n        get { return seriesType; }\n        set\n        {\n            seriesType = value;\n            StateHasChanged();\n        }\n    }\n\n    protected override void OnInitialized()\n    {\n\n        Data = SampleCategoryData.Create();\n    }\n\n    public void OnSeriesTypeChanged(ChangeEventArgs e)\n    {\n        var selectedSeries = e.Value.ToString();\n        SeriesType = selectedSeries;\n    }\n}",
